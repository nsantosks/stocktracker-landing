    <script>
        // Init Icons
        lucide.createIcons();

        // Global Chart Defaults
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748b';

        // 1. Chart: Costs
        new Chart(document.getElementById('strategyCostChart'), {
            type: 'bar',
            data: {
                labels: ['Alianza Nuva', 'Independiente'],
                datasets: [
                    { 
                        label: 'Exámenes & Capacitación', 
                        data: [700, 700], 
                        backgroundColor: '#4285F4',
                        borderRadius: 4
                    },
                    { 
                        label: 'Membresía Partner Anual', 
                        data: [0, 2500], 
                        backgroundColor: '#EA4335',
                        borderRadius: 4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { 
                    x: { stacked: true, grid: { display: false } }, 
                    y: { stacked: true } 
                },
                plugins: { legend: { position: 'bottom' } }
            }
        });

        // 2. Chart: Roadmap (Gantt Style based on Report Leads)
        // [Start Week, End Week]
        new Chart(document.getElementById('roadmapChart'), {
            type: 'bar',
            data: {
                labels: ['Infraestructura', 'Digital Leader', 'Workspace Admin', 'Negociación Nuva', 'Cloud Architect', 'Operación'],
                datasets: [{
                    label: 'Semanas',
                    data: [
                        [0, 1],    // Infra (1 wk)
                        [1, 4],    // Leader (3 wks)
                        [4, 10],   // Workspace (6 wks)
                        [10, 12],  // Negociacion (2 wks)
                        [4, 14],   // Architect (10 wks overlap)
                        [14, 18]   // Operacion Start
                    ],
                    backgroundColor: [
                        '#9ca3af', // gray
                        '#4285F4', // blue
                        '#34A853', // green
                        '#EA4335', // red (critico)
                        '#FBBC05', // yellow
                        '#1e293b'  // dark
                    ],
                    borderRadius: 20,
                    borderSkipped: false,
                    barPercentage: 0.6
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: { 
                    x: { beginAtZero: true, max: 20, grid: { borderDash: [2, 2] } },
                    y: { grid: { display: false } }
                },
                plugins: { legend: { display: false } }
            }
        });

        // 3. Chart: Study Load (Doughnut)
        new Chart(document.getElementById('studyLoadChart'), {
            type: 'doughnut',
            data: {
                labels: ['Leader (3 sem)', 'Workspace (6 sem)', 'Architect (10 sem)', 'Security (8 sem)'],
                datasets: [{
                    data: [3, 6, 10, 8],
                    backgroundColor: ['#4285F4', '#34A853', '#FBBC05', '#EA4335'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { 
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return ' ' + context.label;
                            }
                        }
                    }
                },
                cutout: '75%'
            }
        });
    </script>

